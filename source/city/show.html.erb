<% flat = data.flats[city] %>
<div class="wrapper-grey padding-20">
    <div class="container-fluid">
      <div class="row">
          <div class="col-xs-12 col-sm-4">
                  <% link_to "city/#{city}.html", class: "card" do %>
                  <%= image_tag "http://unsplash.it/433/250" %>
                    <div class="card-category"><%= flat.city %></div>
                    <div class="card-description">
                      <h2><%= flat.type %> </h2>
                      <p> <%= flat.summary %> </p>
                    </div>
                    <% end %>
          </div>
        </div>
      </div>
    </div>
