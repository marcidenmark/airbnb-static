  <!-- cards -->

  <div class="wrapper-grey padding-20">
    <div class="container-fluid">
      <div class="row">
        <% data.flats.each do |city, details| %>
          <div class="col-xs-12 col-sm-4">
          <% link_to "city/#{city}.html", class: "card" do %>
              <%= image_tag "http://unsplash.it/433/250" %>
                <div class="card-category"><%= details.city %></div>
                <div class="card-description">
                  <h2><%= details.type %> </h2>
                  <p> <%= details.summary %> </p>
                </div>
                <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>

  <!-- form -->
  <div class="wrapper-grey">
    <div class="container">
    <h1>Get news from us!</h1>
    <p>Leave us your mail and get news from us.</p>
      <form action="#" class="form-inline">
        <input type="email" class="form-control">
        <input type="password" class="form-control">
        <input type="submit" value="Sign In" class="btn btn-primary">
      </form>
    </div>
  </div>

<div id="map" style="width: 100%; height: 400px;"></div>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<script type="text/javascript">
var myLatlng = new google.maps.LatLng(48.853561, 2.338960);

var myOptions = {
  zoom: 20,
  center: myLatlng,
  scrollwheel: false,
  mapTypeId: google.maps.MapTypeId.ROADMAP,
  styles: [] // TODO: replace [] by array from https://snazzymaps.com/
};

var map = new google.maps.Map(document.getElementById('map'), myOptions);
var marker = new google.maps.Marker({
  position: myLatlng,
  map: map,
  title: "Hotel St. André Des Artes"
});
</script>
